---
import Layout from '../../layouts/Layout.astro';

// Datos de ejemplo para los cursos
const courses = [
  {
    id: 'finanzas-basicas',
    title: 'Finanzas Básicas',
    description: 'Aprende los conceptos fundamentales de las finanzas personales',
    duration: '4 semanas',
    lessons: 12,
    level: 'Principiante',
    image: '/images/courses/finanzas-basicas.jpg',
    topics: ['Presupuesto', 'Ahorro', 'Inversión', 'Deudas']
  },
  {
    id: 'emprendimiento',
    title: 'Emprendimiento',
    description: 'Desarrolla las habilidades necesarias para iniciar tu propio negocio',
    duration: '6 semanas',
    lessons: 18,
    level: 'Intermedio',
    image: '/images/courses/emprendimiento.jpg',
    topics: ['Plan de negocio', 'Marketing', 'Finanzas', 'Legal']
  },
  {
    id: 'inversiones',
    title: 'Inversiones',
    description: 'Aprende a invertir tu dinero de manera inteligente',
    duration: '5 semanas',
    lessons: 15,
    level: 'Intermedio',
    image: '/images/courses/inversiones.jpg',
    topics: ['Acciones', 'Bonos', 'Fondos', 'Criptomonedas']
  }
];
---

<Layout title="Cursos - EduFin">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Cursos Disponibles
      </h1>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
        Explora nuestros cursos diseñados para fortalecer tus conocimientos financieros
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {courses.map((course) => (
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="relative pb-48">
            <img
              class="absolute h-full w-full object-cover"
              src={course.image}
              alt={course.title}
            />
          </div>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
                  {course.level}
                </span>
              </div>
              <div class="ml-4">
                <span class="text-sm text-gray-500">
                  {course.duration} • {course.lessons} lecciones
                </span>
              </div>
            </div>
            <div class="mt-4">
              <h3 class="text-lg font-medium text-gray-900">
                {course.title}
              </h3>
              <p class="mt-2 text-sm text-gray-500">
                {course.description}
              </p>
            </div>
            <div class="mt-4">
              <div class="flex flex-wrap gap-2">
                {course.topics.map((topic) => (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    {topic}
                  </span>
                ))}
              </div>
            </div>
            <div class="mt-6">
              <a
                href={`/cursos/${course.id}`}
                class="w-full flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
              >
                Comenzar curso
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout> 