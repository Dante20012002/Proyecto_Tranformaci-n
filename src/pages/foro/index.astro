---
import Layout from '../../layouts/Layout.astro';

// Datos de ejemplo para las categorías del foro
const categories = [
  {
    id: 'finanzas',
    title: 'Finanzas Personales',
    description: 'Discusiones sobre presupuestos, ahorro e inversión',
    topics: 12,
    posts: 45
  },
  {
    id: 'emprendimiento',
    title: 'Emprendimiento',
    description: 'Ideas de negocio, planificación y estrategias',
    topics: 8,
    posts: 32
  },
  {
    id: 'inversiones',
    title: 'Inversiones',
    description: 'Mercados financieros, acciones y bonos',
    topics: 15,
    posts: 67
  }
];

// Datos de ejemplo para los temas recientes
const recentTopics = [
  {
    id: '1',
    title: '¿Cómo crear un presupuesto mensual?',
    category: 'finanzas',
    author: 'Juan Pérez',
    replies: 5,
    lastReply: '2024-03-15'
  },
  {
    id: '2',
    title: 'Ideas para mi primer emprendimiento',
    category: 'emprendimiento',
    author: 'María García',
    replies: 8,
    lastReply: '2024-03-14'
  }
];
---

<Layout title="Foro - EduFin">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Foro de Discusión
      </h1>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
        Comparte tus dudas y aprende de la comunidad
      </p>
    </div>

    <!-- Categorías -->
    <div class="bg-white shadow overflow-hidden sm:rounded-md mb-8">
      <ul role="list" class="divide-y divide-gray-200">
        {categories.map((category) => (
          <li>
            <a href={`/foro/${category.id}`} class="block hover:bg-gray-50">
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex-1 min-w-0">
                    <p class="text-lg font-medium text-primary-600 truncate">
                      {category.title}
                    </p>
                    <p class="mt-1 text-sm text-gray-500">
                      {category.description}
                    </p>
                  </div>
                  <div class="ml-4 flex-shrink-0 flex">
                    <div class="text-sm text-gray-500">
                      {category.topics} temas • {category.posts} mensajes
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Temas Recientes -->
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <div class="px-4 py-5 sm:px-6">
        <h2 class="text-lg font-medium text-gray-900">Temas Recientes</h2>
      </div>
      <ul role="list" class="divide-y divide-gray-200">
        {recentTopics.map((topic) => (
          <li>
            <a href={`/foro/tema/${topic.id}`} class="block hover:bg-gray-50">
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-primary-600 truncate">
                      {topic.title}
                    </p>
                    <div class="mt-2 flex">
                      <div class="flex items-center text-sm text-gray-500">
                        <span>Por {topic.author}</span>
                        <span class="mx-2">•</span>
                        <span>{topic.replies} respuestas</span>
                        <span class="mx-2">•</span>
                        <span>Última respuesta: {topic.lastReply}</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Botón para nuevo tema -->
    <div class="mt-8 flex justify-end">
      <a
        href="/foro/nuevo-tema"
        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
      >
        Crear nuevo tema
      </a>
    </div>
  </div>
</Layout> 