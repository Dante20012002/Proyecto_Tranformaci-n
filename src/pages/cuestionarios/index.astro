---
import Layout from '../../layouts/Layout.astro';
import Question from '../../components/Question.astro';

// Datos de ejemplo para los cuestionarios
const quizzes = [
  {
    id: 'finanzas-basicas',
    title: 'Finanzas Básicas',
    description: 'Conceptos fundamentales de finanzas personales',
    questions: [
      {
        id: '1',
        text: '¿Qué es un presupuesto?',
        type: 'multiple',
        options: [
          'Un plan de gastos e ingresos',
          'Una cuenta bancaria',
          'Un tipo de inversión',
          'Un préstamo'
        ],
        correctAnswer: 'Un plan de gastos e ingresos'
      },
      {
        id: '2',
        text: '¿Es importante ahorrar una parte de tus ingresos?',
        type: 'boolean',
        correctAnswer: 'true'
      }
    ]
  },
  {
    id: 'emprendimiento',
    title: 'Emprendimiento',
    description: 'Conceptos básicos sobre emprendimiento',
    questions: [
      {
        id: '1',
        text: 'Ordena los pasos para iniciar un negocio:',
        type: 'drag-drop',
        options: [
          'Plan de negocio',
          'Investigación de mercado',
          'Financiamiento',
          'Implementación'
        ],
        correctAnswer: ['Investigación de mercado', 'Plan de negocio', 'Financiamiento', 'Implementación']
      }
    ]
  }
];
---

<Layout title="Cuestionarios - EduFin">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center">
      <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Cuestionarios Interactivos
      </h1>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
        Pon a prueba tus conocimientos con nuestros cuestionarios interactivos
      </p>
    </div>

    <div class="mt-12 grid gap-8 md:grid-cols-2">
      {quizzes.map((quiz) => (
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
              {quiz.title}
            </h3>
            <div class="mt-2 max-w-xl text-sm text-gray-500">
              <p>{quiz.description}</p>
            </div>
            <div class="mt-5">
              <a
                href={`/cuestionarios/${quiz.id}`}
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
              >
                Comenzar cuestionario
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout> 